@model lefarm.Models.Article
@{
    ViewBag.Title = "AboutManagement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Content/ckeditor/ckeditor.js"></script>
<div class="title">
    <div class="row">
        <div class="col-xs-10">
            <h3>
                Quản lý - Cập nhật: @Model.Name
            </h3>
        </div>
        <div class="col-xs-2 text-right">
            <a onclick="goBack()" class="btn-default">Quay lại</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("AboutUs", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(b => b.Id)
            @Html.Label("Tiêu đề")
            @Html.TextBoxFor(b => b.Name, new { @class = "form-control input-medium", rows = 50, cols = 100 })
            @Html.ValidationMessageFor(b => b.Name)

            @Html.Label("Nội dung")
            @Html.TextAreaFor(b => b.Content, new { @class = "form-control input-medium", rows = 50, cols = 100 })
            @Html.ValidationMessageFor(b => b.Content)
            <div class="text-center">
                <br />
                <input type="submit" name="submit" value="Cập nhật" class="btn" />
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        createEditor('vi', 'Content');
    });
</script>

