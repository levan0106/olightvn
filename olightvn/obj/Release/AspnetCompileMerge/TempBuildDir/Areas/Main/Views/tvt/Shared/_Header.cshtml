<div class=" content-menu-top">
    <div class="wrapper">
        <div class="row">
            <div class="col-xs-7 display-desk" style="line-height: 32px;">
                <span class="icon" style="margin-left:30px;"><i class="fa fa-phone"></i> @SessionManager.ContactInfo.Phone</span>
            </div>
            <div class="col-xs-5 text-right ">
                @if (GeneralFuncs.GetSettingByKey("Facebook") == "true")
                {
                    <a href="#/lien-he" target="_blank"><span class="icon fa fa-facebook"></span></a>
                }
                <a href="#/lien-he"><span class="icon fa fa-map-marker"></span></a>
                <a href="#/lien-he"><span class="icon fa fa-envelope"></span></a>

            </div>
        </div>
    </div>
</div>

<div class="content-menu">
    <div class="wrapper">
        <div class="navbar-fixed pos-rel">
            <div class="nav-second">
                <span id="uiIconSearch" class="glyphicon glyphicon-search" data-toggle="collapse" data-target="#uiSearchForm">Tìm kiếm</span> 
                @if (GeneralFuncs.GetSettingByKey("ShowCart") == "true")
                {
                    <a href="/#/cart" class="icon-cart"><span class="glyphicon glyphicon-shopping-cart icon"></span><span id="count">0</span></a>
                }
            </div>                
            @Html.PartialCustom("~/Areas/Main/Views/Shared/_search.cshtml", "uiSearchForm")       
            <div class="navbar-header nnavbar navbar-inverse">
                <div>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        <a href="~/#/">
                            @Helpers.RenderLogo("logo")
                        </a>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="menu nav navbar-nav display-desk">
                    <li>
                        <a href="~/#/" class="logo">
                            @Helpers.RenderLogo()
                        </a>
                    </li>
                </ul>
                <div class="">
                    @Html.PartialCustom("~/Areas/Main/Views/Shared/_SiteMap.cshtml")
                </div>
            </div>            
        </div>
    </div>
</div>
<script>
   
    function onKeyPress(e, id) {
        if (e.keyCode == 13) {
            $("#" + id).click();
            return false;
        }
    }
</script>