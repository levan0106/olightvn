@model string
<table class="table">
    <thead class="thead-inverse">
        <tr>
            <th class="w-5">STT</th>
            <th class="w-10">Image</th>
            <th class="w-30">
                Tên
            </th>
            <th class="w-35 desktop">
                Diễn giải
            </th>
            <th class="w-15">
                Trạng thái
            </th>
            <th class="w-5">Xóa</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="data in items.data">
            <td class="text-center">{{$index + 1}}</td>
            <td>
                <a href="@Model/{{data.Id}}">
                    <img ng-src="@WebConfigurations.ThumbPath{{data.Thumbnail}}" class="thumb" ng-hide="data.Thumbnail==null" />  
                    <img ng-src="@WebConfigurations.ThumbPathDefault" class="thumb" ng-show="data.Thumbnail==null" />  
                </a>
            </td>
            <td>
                <a href="@Model/{{data.Id}}">
                    {{data.Name}}
                </a>
            </td>
            <td class="short-description desktop">
                <span ng-bind-html="data.ShortDescription | trust"></span>
            </td>
            <td class="text-center" >
                <span ng-class="data.ActiveStatus == 1?'icon-active':'icon-inactive'"></span>
            </td>
            <td class="text-center">
                <a class="icon-delete" ng-click="doDelete(data.Id);"></a>
            </td>
        </tr>
    </tbody>
</table>

