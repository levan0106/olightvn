
<div class="content-menu">
    <div class="wrapper">
        <div class="navbar-fixed pos-rel">
            <div class="navbar-header nnavbar navbar-inverse">
                <div>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        <a href="~/#/">
                            @Helpers.RenderLogo("logo")
                        </a>
                    </div>
                    <div class="mobile">
                        <a href="/admin/logout" class="icon-user"></a>
                        <span class="icon-search" onclick="return switchSearch()"></span>
                    </div>
                </div>
                <div class=" mobile ">
                    <div class="search-content hide" ng-controller="searchController">
                        <span class="icon-back" onclick="return switchSearch()"></span>
                        <div>
                            <input type="text" ng-model="value" class="form-control search" placeholder="Nhập từ cần tìm"
                                    onkeypress="return onKeyPress(event, 'btnSearch1')" />
                            <a id="btnSearch1" ng-click="doSearch()" class="btn-search"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse navbar-inverse">
                <ul class="menu nav navbar-nav display-desk">
                    <li>
                        <a href="~/#/" class="logo" style="width:90px;">
                            @Helpers.RenderLogo()
                        </a>
                    </li>
                </ul>
                <div class="">
                    @Html.PartialCustom("~/Areas/Main/Views/Shared/_SiteMap.cshtml")
                </div>
            </div>
            <div class="display-desk search-panel">
                <div class="search-container" ng-controller="searchController">
                    <input type="text" ng-model="value" class="form-control search" placeholder="Nhập từ cần tìm" onkeypress="return onKeyPress(event, 'btnSearch')" />
                    <a id="btnSearch" ng-click="doSearch()" class="btn-search"><span class="glyphicon glyphicon-search"></span></a>
                </div>
            </div>
                @*Your cart*@
                @if (GeneralFuncs.GetSettingByKey("ShowCart") == "true")
            {

            <a href="/#/cart" class="icon-cart"><span>0</span></a>
            }
            </div>
    </div>
</div>
<script>
    function switchSearch() {
        $(".search-content").toggleClass("hide");
        $(".icon-cart").toggleClass("hide");
        $(".search").focus();
        return false;
    }
    function onKeyPress(e, id) {
        if (e.keyCode == 13) {
            $("#" + id).click();
            return false;
        }
    }
</script>